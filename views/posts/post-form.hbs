<div id="form">
  <h2>Create Post</h2>
  <form action="/post" method="POST" enctype="multipart/form-data">
    <label for="textarea-content">Post content</label>
    <textarea name="content" id="textarea-content" placeholder="Say something..."></textarea>

    <label for="input-picture">Picture</label>
    <input type="file" name="attachment" id="input-picture" />

    <label for="input-picture-name">Picture name</label>
    <input type="text" name="name" id="input-picture-name" />

    <button type="submit">Create post</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>